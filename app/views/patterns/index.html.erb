<%= button_to 'New Pattern', new_pattern_path, class: "btn btn-primary btn-lg", :method => :get %>

<p id="notice"><%= notice %></p>

<div class="table" id="table">
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan='3'>Pattern</th>
      </tr>
    </thead>
    <tbody>
      <% @patterns.each do |pattern| %>
        <tr>
          <td id="text"><%= pattern.text %></span></td>
          <td id="edit">
            <%= button_to edit_pattern_path(pattern), class: "btn btn-success", :method => :get do %>
              Edit
            <% end %>
          </td>
          <td id="destroy">
            <%= button_to pattern, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
              Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

